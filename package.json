{
  "name": "nahoot",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/electron/main.js",
  "author": "stephane mfuni",
  "description": "Local Quiz application",
  "scripts": {
    "dev:react": "vite --host",
    "dev:electron": "electron .",
    "build": "tsc -b && vite build && electron-builder --mac --arm64",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3 bcrypt",
    "build:react": "tsc -b && vite build",
    "build:electron": "electron-builder --mac --arm64",
    "build:win": "tsc -b && vite build && electron-builder --win --x64"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.469.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.silverstone217.nahoot",
    "files": [
      "dist/**/*",
      "src/electron/main.js",
      "dist-react",
      "src/electron/database.db",
      "src/electron/lib.js",
      "src/electron/api/auth.js",
      "src/electron/api/**/*",
      "src/electron/api",
      "src/electron/api/admin/**/*",
      "src/electron/api/admin/competitions.js",
      "src/electron/middleware.js",
      "src/electron/**/*",
      "src/electron",
      "src/electron/api/images/**",
      "src/electron/api/images/images.js",
      "src/electron/api/images"
    ]
  }
}
